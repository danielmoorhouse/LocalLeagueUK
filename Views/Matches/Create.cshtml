@model LocalLeague1.Models.Matches

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Matches</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="custom-control-label col-md-2" for="LeagueId">League Selection</label>
        <div class="col-md-10">
            @Html.DropDownList("LeagueId")
            @Html.ValidationMessageFor(model => model.LeagueId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="custom-control-label col-md-2" for="HomeTeamId">Home Team</label>
        <div class="col-md-10">
            @Html.DropDownList("HomeTeamId")
            @Html.ValidationMessageFor(model => model.HomeTeamId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="custom-control-label col-md-2" for="AwayTeamId">Away Team</label>
        <div class="col-md-10">
            @Html.DropDownList("AwayTeamId")
            @Html.ValidationMessageFor(model => model.AwayTeamId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="custom-control-label col-md-2" for="RefId">Select Referee</label>
        <div class="col-md-10">
            @Html.DropDownList("RefId")
            @Html.ValidationMessageFor(model => model.RefId, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.HomeGoals, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.HomeGoals, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.HomeGoals, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.AwayGoals, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.AwayGoals, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AwayGoals, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="custom-control-label col-md-2" for="VenueId">Select Venue</label>
        <div class="col-md-10">
            @Html.DropDownList("VenueId")
            @Html.ValidationMessageFor(model => model.VenueId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MatchDate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.MatchDate, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MatchDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
